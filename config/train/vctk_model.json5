{
    "seed": 0,
    "description": "null",
    "root_dir": "./checkpoints/vctk",
    "cudnn_deterministic": false,
    "trainer": {
        "module": "trainer.causal_trainer",
        "main": "Trainer",
        "epochs": 500,
        "save_checkpoint_interval": 1,
        "validation": {
            "interval": 1,
            "find_max": true,
            "custom": {
                "visualization_limit": 20,
                "n_fft": 100,
                "win_length": 100,
                "hop_length": 25
            }
        }
    },
    "model": {
        "module": "model.crn",
        "main": "MiniCRN",
        "args": {}
    },
    "loss_function": {
        "module": "model.loss",
        "main": "mse_loss_for_variable_length_data",
        "args": {}
    },
    "optimizer": {
        "lr": 0.0006,
        "beta1": 0.9,
        "beta2": 0.999
    },
    "train_dataset": {
        "module": "dataset.vctk_dataset_loader",
        "main": "Dataset",
        "args": {
            "dataset_list": "./dataset_lists/train_vctk_pairs.txt",
            "limit": null,
            "offset": 0,
            "sr": 16000,
            "n_fft": 100,
            "hop_length": 25,
            "train": true
        }
    },
    "validation_dataset": {
        "module": "dataset.vctk_dataset_loader",
        "main": "Dataset",
        "args": {
            "dataset_list": "./dataset_lists/val_vctk_pairs.txt",
            "limit": null,
            "offset": 0,
            "sr": 16000,
            "n_fft": 100,
            "hop_length": 25,
            "train": false
        },
    },
    "train_dataloader": {
        "batch_size": 8,
        "num_workers": 40,
        "shuffle": true,
        "pin_memory": true
    }
}